<?xml version="1.0" encoding="UTF-8"?>
<config>
  <modules>
    <Facebook_AdsToolbox>
      <version>0.0.1</version>
    </Facebook_AdsToolbox>
  </modules>
  <global>
    <blocks>
      <Facebook_AdsToolbox>
        <class>Facebook_AdsToolbox_Block</class>
      </Facebook_AdsToolbox>
    </blocks>
    <helpers>
      <Facebook_AdsToolbox>
        <class>Facebook_AdsToolbox_Helper</class>
      </Facebook_AdsToolbox>
    </helpers>
    <events>
      <checkout_cart_product_add_after>
        <observers>
          <Facebook_AdsToolbox_Cart_Observer>
            <type>singleton</type>
            <class>Facebook_AdsToolbox_Model_Observer</class>
            <method>addToCart</method>
          </Facebook_AdsToolbox_Cart_Observer>
        </observers>
    </checkout_cart_product_add_after>   
   </events>
  </global>
  <frontend>
    <layout>
      <updates>
        <FacebookAdsToolbox
          module="Facebook_AdsToolbox">
          <file>facebookadstoolbox.xml</file>
        </FacebookAdsToolbox>
      </updates>
    </layout>
  </frontend>
  <admin>
    <routers>
      <adminhtml>
        <args>
          <modules>
            <Pixel after="Mage_Adminhtml">Facebook_AdsToolbox_Adminhtml</Pixel>
          </modules>
        </args>
      </adminhtml>
    </routers>
  </admin>
  <adminhtml>
    <layout>
      <updates>
        <FacebookAdsToolbox module="Facebook_AdsToolbox_Adminhtml">
          <file>facebookadstoolbox.xml</file>
        </FacebookAdsToolbox>
      </updates>
    </layout>
  </adminhtml>
</config>
